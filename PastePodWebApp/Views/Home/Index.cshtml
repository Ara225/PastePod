@model TextDocumentViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutForPastePage";
}
<form style="height: 100%;width: 100%;margin:0" method="post">
    @Html.TextArea("TextContent", (string)(ViewBag.DocumentContent != null ? ViewBag.DocumentContent : ""), new { @Class = "bg-dark text-light", @Required = true, @Style = "border-style: none;width: 100%;height: 100%;padding: 30px;margin: 0" });
    <div style="position: absolute;right: 10px;top:10px">
        <div class="row">
            <button class="bg-dark text-white btn rounded-0 p-1" title="Save document" style="font-size: 1.5em;"><i class="fas fa-save"></i></button>
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Logout" title="Sign out of your account" style="font-size: 1.5em;"><i class="fas fa-sign-out-alt"></i></a>

            }
            else
            {
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login" title="Sign in to your account" style="font-size: 1.5em;"><i class="fas fa-sign-in-alt"></i></a>
            }
        </div>
    </div>
</form>